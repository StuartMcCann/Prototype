

@model IEnumerable<Prototype.Models.CandidateProfile> //this adds object from method in controller




<div class="container text">
    <h1 class="heading add-margin">Suggested Candidates</h1>
    
    <div class="row buffer">
        <div class="col-sm-3 buffer">

            <div class="border buffer">
                <h5 class="heading buffer">Our Matching service</h5>
                <p>We analyse you job posing and match candidates with the right skills to help you deliver your workload.</p>

            </div>





        </div><!--End of filter column-->
        <div class="col-sm-9">
            @if (Model.Count() > 0)
            {
                <h6>We have carefully picked out @Model.Count() candidate(s) for your review who we think could be a good match. </h6>

                <div class="container">


                    <div class="row ">
                        @foreach (var candidate in Model)
                        {
                            <div class="col-sm"></div>
                            <div class="col-sm col-md-3 buffer ">

                                <div class="card text" style="width: 18rem;">
                                    <div class="card-body">


                                        <h5 class="card-title">@candidate.FirstName @candidate.LastName</h5>
                                        <h6 class="card-subtitle mb-2"> @candidate.JobTitleEnum.GetDisplayName()</h6>
                                        <h6 class="card-subtitle mb-2">@if (candidate.Rating > 0)
                                        {<span>RecruitAPP Rating @candidate.Rating / 5</span>}
                                    else
                                    {<span>Not Rated Yet</span>}</h6>

                                        <p class="card-text">Level: @candidate.LevelEnum</p>
                                        <p class="card-text">
                                            Skills:
                                            @foreach (Skill skill in candidate.Skills)
                                            {
                                                <span class="badge skill">@skill.SkillName</span>
                                            }



                                        </p>
                                        <p class="card-text">Charge Rate: @candidate.Rate per hour </p>


                                        @Html.ActionLink("View more", "CandidateProfile", "Candidate", new { id = candidate.CandidateID })


                                    </div>
                                </div>








                            </div>
                            <div class="col-sm"></div>

                        }
                    </div>

                </div>
            } else
            {

            <h6><i class="fas fa-binoculars"></i> Looks like there are no candidates available who match your requirements  </h6>
            <h6>Don't worry, we'll advertise your vacancy and candidates will be able to approach you by liking your job!</h6>
            }





        </div>
    </div>

</div>
